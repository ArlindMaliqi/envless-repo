{
  "name": "envless-repo",
  "version": "1.1.0-dev.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "semantic-release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "release:alpha": "semantic-release --branches alpha",
    "release:beta": "semantic-release --branches beta",
    "release:dev": "semantic-release --branches develop",
    "prepare": "husky install",
    "commit": "git-cz",
    "version:check": "echo \"Current version: $(node -p 'require(\"./package.json\").version')\"",
    "changelog:preview": "conventional-changelog -p conventionalcommits -r 2"
  },
  "dependencies": {
    "next": "^15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "semantic-release": "^22.0.8",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
